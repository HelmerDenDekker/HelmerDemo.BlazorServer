@page "/personpetrx"

<PageTitle>Persons pet</PageTitle>

<EditForm EditContext="@_editContext" OnValidSubmit="Submit">
<DataAnnotationsValidator />

<div class="form-group">
    <label for="name">Enter your Name: </label>
    <InputTextArea @oninput="TextAreaInputChange" @ref="_inputTextReference"  Id="name" Class="form-control" @bind-Value="_person!.Name"> </InputTextArea>
    <ValidationMessage For="@(() => _person.Name)" />

</div>
<div class="form-group">
    <label for="body">Select your pet: </label>
    <InputSelect @bind-Value="@_person.Pet">
        <option value="Cat">Cat</option>
        <option value="Dog">Dog</option>
        <option value="Horse">Horse</option>
        <option value="Lion">Lion</option>
    </InputSelect>
     <ValidationMessage For="@(() => _person.Pet)" />
</div>

<p>
    <button type="submit">Submit</button>
</p>
</EditForm>


