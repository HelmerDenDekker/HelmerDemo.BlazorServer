@page "/counterev"

@{
	this.MaxValue = 20;
}

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p>This demonstrates old school dotNet decoupled event handlers instead of a timer function, to demonstrate the drawbacks</p>

@if (CurrentCount >= MaxValue)
{
	<p role="status" class="@ErrorStyle">@ErrorMessage</p>
}
<p role="status" class="@ErrorStyle">Current count: @CurrentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

